@model SeriesViewModel
@{
    ViewData["Title"] = Model.Series;
}
<h1>@Model.Series number series</h1>
<p>
    The number at the position @Model.N in the @Model.Series number series is <strong>@Model.Result</strong>.



    <div class="mt-3">

		<!--If para asegurarse de que no se muestre el boton previo si es menor a 0-->
        @if (Model.N > 0)
        {
            <a href="/series/@Model.Series/@(Model.N - 1)" class="btn btn-primary me-2">Previo</a>
        }

        <a href="/series/@Model.Series/@(Model.N + 1)" class="btn btn-primary">Siguiente</a>

        <!--Al final me rendi  y no me meti con con el boton en html porque era mucho pex meterme con javascript y pues esta mas facil hacer esto-->
        <!--pd: me css sigue ahi por si lo quiere checar (Obvio no es copiado de un sitio (si lo es) )-->

    </div>

</p>