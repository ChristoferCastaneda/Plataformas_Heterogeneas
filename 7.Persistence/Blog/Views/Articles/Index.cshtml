@model IEnumerable<Blog.Models.Article>

@{
    ViewData["Title"] = "Blog";

    string? authorEmail = null;
    DateTimeOffset? startDate = null;
    DateTimeOffset? endDate = null;
}

<h1>Published Articles</h1>

<form class="row row-cols-lg-auto g-3 align-items-center" asp-action="Index" method="get">
    <div class="col-12">
        <label class="visually-hidden"
               asp-for="@startDate">Start date</label>
        <input class="form-control"
               type="date" asp-for="@startDate" />
    </div>
    <div class="col-12">
        <label class="visually-hidden"
               asp-for="@endDate">End date</label>
        <input class="form-control"
               type="date" asp-for="@endDate" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Filter</button>
    </div>
</form>

<div class="row mt-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var article in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                @article.Title
                            </a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            By @article.AuthorName
                        </h6>
                        <p class="card-text">
                            <small class="text-muted">
                                Published: @article.PublishedDate.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </p>
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"
                           class="btn btn-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                No articles found :( <a asp-controller="Articles" asp-action="Create">Create the first one</a>
            </div>
        </div>
    }
</div>


