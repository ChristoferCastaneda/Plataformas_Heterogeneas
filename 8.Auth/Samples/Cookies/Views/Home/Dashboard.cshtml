@model Cookies.Models.User

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Dashboard - Área Protegida</h1>
            <hr />

            <div class="alert alert-info">
                <strong>¡Bienvenido!</strong> Has iniciado sesión correctamente.
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Información Personal</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Nombre de Usuario:</th>
                                <td>@Model.Username</td>
                            </tr>
                            <tr>
                                <th>Nombre Completo:</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Correo Electrónico:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Fecha de Nacimiento:</th>
                                <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>Edad:</th>
                                <td>@((DateTime.Now.Year - Model.DateOfBirth.Year)) años</td>
                            </tr>
                            <tr>
                                <th>Miembro desde:</th>
                                <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-4">
                <div class="alert alert-warning">
                    <strong>Nota:</strong> Tu sesión expirará después de 5 minutos de inactividad.
                </div>
            </div>

            <div class="mt-3">
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>